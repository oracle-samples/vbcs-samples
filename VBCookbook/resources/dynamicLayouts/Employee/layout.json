{
  "layoutTypes": {
    "businessObjects": {
      "kind": "operationRef",
      "serviceId": "businessObjects",
      "operations": [
        "get_Employee",
        "getall_Employee"
      ]
    }
  },
  "layouts": {
    "isDefault": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "formExampleLayout": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Form Example",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "email",
              "phoneNumber",
              "salary",
              "hireDate"
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "isDefault"
          ]
        }
      }
    },
    "employeeFormRuleSet": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Employee Form RuleSet",
      "rules": [
        "getCorrectLayout"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "default",
          "description": "",
          "layout": {
            "displayProperties": [
              "id",
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "salary",
              "hireDate",
              "manager"
            ]
          },
          "usedIn": []
        },
        "employeeLayout": {
          "layoutType": "form",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate"
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        },
        "managerLayout": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "managerLayout",
          "description": "",
          "layout": {
            "displayProperties": [
              "fullName",
              "phoneNumber",
              "email",
              "hireDate",
              {
                  "salary": {
                    "colspan": 2
                  }
                }
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        },
        "myselfLayout": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "selfLayout",
          "description": "",
          "layout": {
            "displayProperties": [
              "phoneNumber",
              "email",
              "hireDate",
              "salary"
            ],
            "maxColumns": 2,
            "fieldTemplateMap": {
            }
          },
          "usedIn": [
            "getCorrectLayout"
          ]
        }

      },
      "fieldTemplateMap": {
        "salary": "managerSalaryTemplate"
      }
    },
    "simpleEmployeeListRuleSet": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Simple Employee List RuleSet",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "fullName",
              "email",
              "phoneNumber",
              "salary"
            ]
          },
          "usedIn": [
            "isDefault"
          ]
        }
      },
      "fieldTemplateMap": {
        "phoneNumber": "phoneTemplate",
        "email": "emailTemplate"
      }
 
    },
    "tableExampleLayout": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Table Example",
      "rules": [
        "isDefault"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "email",
              "phoneNumber",
              "salary"
            ]
          }
        }
      }
    },
    "getCorrectLayout": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "{{ $value.id === 100 ? \"myselfLayout\" : ($value.manager === 100 ? 'managerLayout' : 'employeeLayout') }}"
    },
    "contextBasedForm": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "contextBasedForm",
      "rules": [
        "ExternalProfile",
        "InernalProfile"
      ],
      "layouts": {

        "externalProfile": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "externalProfile",
          "description": "",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate"
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "ExternalProfile"
          ]
        },
        "internalProfile": {
          "layoutType": "form",
          "type": "businessObjects",
          "label": "internalProfile",
          "description": "",
          "layout": {
            "displayProperties": [
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "hireDate",
              "salary"
            ],
            "maxColumns": 2
          },
          "usedIn": [
            "InernalProfile"
          ]
        }
      }
    },
    "InernalProfile": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "{{ $componentContext.profile === 'internal' ? 'internalProfile' : null }}"
    },
    "ExternalProfile": {
      "expression": "{{ $componentContext.profile === 'external' ? 'externalProfile' : null }}"
    },
    "isDefault2": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "employeeListViewLayout": {
      "type": "businessObjects",
      "layoutType": "form",
      "label": "Employee List View Layout",
      "rules": [
        "isDefault2"
      ],
      "layouts": {
        "default": {
          "layoutType": "form",
          "layout": {

            "displayProperties": [
              "fullName",
              "email",
              "phoneNumber"
            ],
            "templateId": "employeeListViewTemplate"
          },
          "usedIn": [
            "isDefault2"
          ]
        }
      },
      "fieldTemplateMap": {
        "email": "listViewMailTemplate",
        "fullName": "listViewNameTemplate",
        "phoneNumber": "listViewPhoneTemplate"
      }
    },
    "isDefault3": {
      "description": "Default Rule",
      "type": "businessObjects",
      "expression": "default"
    },
    "employeeTableDesktopMode": {
      "type": "businessObjects",
      "layoutType": "table",
      "label": "Employee Table Desktop Mode",
      "rules": [
        "isDefault3"
      ],
      "layouts": {
        "default": {
          "layoutType": "table",
          "layout": {
            "displayProperties": [
              "id",
              "firstName",
              "lastName",
              "phoneNumber",
              "email",
              "salary",
              "hireDate"
            ]
          },
          "usedIn": [
            "isDefault3"
          ]
        }
      },
      "fieldTemplateMap": {
        "id": "avatarTemplate"
      }
    }
  },
  "templates": {
    "avatarTemplate": {
      "title": "Avatar Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojavatar",
        "ojs/ojinputtext"
      ]
    },
    "emailTemplate": {
      "title": "Email Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojinputtext"
      ]
    },
    "listViewMailTemplate": {
      "title": "List View Mail Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojinputtext"
      ]
    },
    "listViewNameTemplate": {
      "title": "List View Name Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojinputtext"
      ]
    },
    "listViewPhoneTemplate": {
      "title": "List View Phone Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojinputtext"
      ]
    },
    "employeeListViewTemplate": {
      "title": "Employee List View Template",
      
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "form"
      },
      "dependencies": [
        "oj-dynamic/bind-field/loader",
        "ojs/ojavatar",
        "ojs/ojformlayout"
      ],
      "referencedFields": {
        "generated": [
          "email",
          "fullName",
          "id",
          "phoneNumber"
        ]
      }
    },
    "phoneTemplate": {
      "title": "Phone Template",
      "description": "",
      "extensible": "byReference",
      "@dt": {
        "type": "field"
      },
      "dependencies": [
        "ojs/ojinputtext"
      ]
    }

  },
  "imports": {
    "css": [
      "https://static.oracle.com/cdn/vb/vb-icon-font/1/vb-icon-font.css"
    ]
  }
}