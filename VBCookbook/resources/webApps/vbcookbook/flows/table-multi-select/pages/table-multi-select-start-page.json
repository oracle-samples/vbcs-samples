{

  "title": "My start page",
  "description": "The starting page of the flow",
  "variables": {
    "currentSelection": {
      "type": "string"
    },
    "departmentListSDP": {
      "type": "vb/ServiceDataProvider",
      "defaultValue": {
        "endpoint": "businessObjects/getall_Department",
        "keyAttributes": "id",
        "itemsPath": "items",
        "responseType": "page:getallDepartmentResponse"
      }
    },
    "disableDeselectAll": {
      "type": "boolean",
      "defaultValue": true
    },
    "rowData": {
      "type": "object[]"
    }
  },
  "types": {
    "getallDepartmentResponse": {
      "items": [{
        "departmentName": "string",
        "id": "number",
        "location": "number",
        "manager": "number"
      }]
    }
  },
  "chains": {
    "TableSelectedChangeChain": {
      "description": "",
      "root": "resetVariables",
      "actions": {
        "assignVariables1": {
          "module": "vb/action/builtin/assignVariablesAction",
          "parameters": {
            "$page.variables.currentSelection": {
              "source": "{{ $chain.results.selectedChangedModuleFunction }}"
            },
            "$page.variables.disableDeselectAll": {
              "source": "{{ $page.functions.isSelectionEmpty($variables.selected) }}"
            }
          },
          "outcomes": {
            "success": "if"
          }
        },
        "selectedChangedModuleFunction": {
          "module": "vb/action/builtin/callModuleFunctionAction",
          "parameters": {
            "module": "[[ $functions ]]",
            "functionName": "selectedChangedListener",
            "params": [ "{{ $variables.selected }}" ],
            "returnType": "string"
          },
          "outcomes": {
            "success": "assignVariables1"
          }
        },
        "assignVariables2": {
          "module": "vb/action/builtin/assignVariablesAction",
          "parameters": {
            "$page.variables.rowData": {
              "source": "{{ $chain.results.callFunctionGetRowsForIDs }}",
              "reset": "empty"
            }
          }
        },
        "resetVariables": {
          "module": "vb/action/builtin/resetVariablesAction",
          "parameters": {
            "variables": [
              "$page.variables.rowData"
            ]
          },
          "outcomes": {
            "success": "selectedChangedModuleFunction"
          }
        },
        "if": {
          "module": "vb/action/builtin/ifAction",
          "parameters": {
            "condition": "[[ !$variables.selected.row.isAddAll() ]]"
          },
          "outcomes": {
            "true": "callFunctionGetRowsForIDs"
          }
        },
        "callFunctionGetRowsForIDs": {
          "module": "vb/action/builtin/callModuleFunctionAction",
          "parameters": {
            "module": "[[ $functions ]]",
            "functionName": "getRowsForIDs",
            "params": [
              "{{ document.getElementById('table') }}",
              "{{ Array.from($variables.selected.row.values()) }}"
            ]
          },
          "outcomes": {
            "success": "assignVariables2"
          }
        }
      },
      "variables": {
        "selected": {
          "required": true,
          "type": "any",
          "input": "fromCaller"
        }
      }
    },
    "onDeselectAll": {
      "description": "",
      "root": "callFunctionDeselectAll",
      "actions": {
        "callFunctionDeselectAll": {
          "module": "vb/action/builtin/callModuleFunctionAction",
          "parameters": {
            "module": "[[ $functions ]]",
            "functionName": "deselectAll"
          }
        }
      },
      "variables": {
        "detail": {
          "required": true,
          "type": "any",
          "input": "fromCaller"
        }
      }
    },
    "onSelectSpecificRows": {
      "description": "",
      "root": "callFunctionSelectSpecificRows",
      "actions": {
        "callFunctionSelectSpecificRows": {
          "module": "vb/action/builtin/callModuleFunctionAction",
          "parameters": {
            "module": "[[ $functions ]]",
            "functionName": "selectSpecificRows"
          }
        }
      },
      "variables": {
        "detail": {
          "required": true,
          "type": "any",
          "input": "fromCaller"
        }
      }
    }
  },
  "eventListeners": {
    "ojButtonOjAction": {
      "chains": [
        {
          "chainId": "onDeselectAll",
          "parameters": {
            "detail": "{{ $event.detail }}"
          }
        }
      ]
    },
    "ojButtonOjAction2": {
      "chains": [
        {
          "chainId": "onSelectSpecificRows",
          "parameters": {
            "detail": "{{ $event.detail }}"
          }
        }
      ]
    },
    "ojTableSelected": {
      "chains": [
        {
          "chainId": "TableSelectedChangeChain",
          "parameters": {
            "selected": "{{ $event.detail.value }}",
            "detail": "{{ $event.detail }}"
          }
        }
      ]
    }
  },
  "imports": {
    "components": {
      "oj-button": {
        "path": "ojs/ojbutton"
      },
      "oj-table": {
        "path": "ojs/ojtable"
      },
      "oj-checkboxset": {
        "path": "ojs/ojcheckboxset"
      },
      "oj-option": {
        "path": "ojs/ojoption"
      },
      "oj-label": {
        "path": "ojs/ojlabel"
      },
      "oj-text-area": {
        "path": "ojs/ojinputtext"
      }
    }
  }
}